{
  "compilerOptions": {
    "lib": [
      "es2019"
    ],
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist-dev",
    "baseUrl": "./",
    "incremental": true
  },
  "include": [
    "lib/**/*",
    "lib/**/*",
    "test/**/*"
  ]

}
